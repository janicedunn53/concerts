<h1>Bands</h1>

<% if @bands.any?() %>
  <h3>Here are all of your favorite bands:</h3>

  <ul>
    <% @bands.each() do |band| %>
      <li><a href="/bands/<%= band.id() %>"><%= band.name() %></a></li>
    <% end %>
  </ul>

<% else %>
  <h4>There are no bands yet!</h4>

<% end %>

<h3>Add a band!</h3>

<form action="/bands" method="post">
  <label for="name"></label>
  <input type="text" name="name" placeholder="Name" required>

  <button name="submit" class="btn btn-primary">Add Band</button>
</form>

<br>
<h5><a href="/">Home</a></h5>
